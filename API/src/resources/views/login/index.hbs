<div class="container">
  <form method="post" action="/admin/login" class="mx-auto">
    <div
      class="w-50 p-3 card-header alert-info"
      style="text-align: center; display: block; margin:auto;"
    >
      <h1>Login</h1>
    </div>
    <div
      class="d-flex justify-content-center w-50 p-3"
      style="display: block; margin:auto;"
    >
      {{{loginFail}}}
    </div>
    <div class="w-50 p-3" style="display: block; margin:auto;">
      <label for="account">Email or username</label>
      <input
        type="text"
        class="form-control"
        id="account"
        name="account"
        aria-describedby="emailHelp"
        placeholder="Enter email or username"
      />
      <small id="emailHelp" class="form-text text-muted">We'll never share your
        information with anyone else.</small>
    </div>
    <div class="w-50 p-3" style="display: block; margin:auto;">
      <label for="password">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Password"
      />
    </div>
    <div
      class="d-flex justify-content-center w-50 p-3"
      style="display: block; margin:auto;"
    >
      <button type="submit" class="btn btn-primary">Login</button>
    </div>
  </form>
</div>