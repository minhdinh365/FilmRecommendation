<div class="container">
  <form method="post" action="/admin/login" class="mx-auto">
    <div class="w-50 p-3 card-header alert-info" style="text-align: center; display: block; margin:auto;">
      <h1>LOGIN</h1>
    </div>
    <div class="d-flex justify-content-center w-50 p-3" style="display: block; margin:auto; ">
      {{{loginFail}}}
    </div>
    <div class="w-50 p-3"
      style="display: block; margin:auto; background-color: white;   border-top-left-radius: 5px;  border-top-right-radius: 5px;">
      <label for="account">Email or username</label>
      <input type="text" class="form-control" id="account" name="account" aria-describedby="emailHelp"
        placeholder="Enter email or username" />
    </div>
    <div class="w-50 p-3" style="display: block; margin:auto; background-color: white">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Password" />
    </div>
    <div class="d-flex justify-content-center w-50 p-3" style="display: block; margin:auto;">
      <button type="submit" class="btn btn-primary" style="width: 100%">Login</button>
    </div>
  </form>
</div>